<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.markautomation.hydracontroller.Settings"
    android:background="#fffbc2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/btnBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Left Motor Speed: 120"
        android:id="@+id/leftMotorSpeedText"
        android:textColor="#000000"
        android:textSize="6pt"
        android:layout_below="@+id/btnBack"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarLeftMotor"
        android:background="#AAAAAA"
        android:clickable="true"
        android:longClickable="true"
        android:max="255"
        android:progress="120"
        android:progressTint="#FFBB00"
        android:indeterminate="false"
        android:minWidth="150dp"
        android:layout_below="@+id/leftMotorSpeedText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Right Motor Speed: 120"
        android:id="@+id/rightMotorSpeedText"
        android:textColor="#000000"
        android:textSize="6pt"
        android:layout_below="@+id/seekBarLeftMotor"
        android:layout_alignLeft="@+id/leftMotorSpeedText"
        android:layout_alignStart="@+id/leftMotorSpeedText"
        android:layout_marginTop="51dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekbarRightMotor"
        android:background="#AAAAAA"
        android:clickable="true"
        android:longClickable="true"
        android:max="255"
        android:progress="120"
        android:progressTint="#FFBB00"
        android:indeterminate="false"
        android:minWidth="150dp"
        android:layout_below="@+id/rightMotorSpeedText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Max: 255"
        android:id="@+id/textView4"
        android:layout_above="@+id/rightMotorSpeedText"
        android:layout_alignRight="@+id/btnBack"
        android:layout_alignEnd="@+id/btnBack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Max: 255"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/seekbarRightMotor"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Min: 0"
        android:id="@+id/textView6"
        android:layout_above="@+id/rightMotorSpeedText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Min: 0"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/seekbarRightMotor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
